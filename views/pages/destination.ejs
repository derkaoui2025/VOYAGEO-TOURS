                            <img src="<%= image %>" alt="View <%= index + 1 %>">
                        </div>
                    <% }) %>
            <% } %>
            <% if (tour.mapImage) { %>
                    <div class="gallery-modal-thumb" data-index="<%= (tour.images ? tour.images.length : 0) + 1 %>">
                        <img src="<%= tour.mapImage %>" alt="Route map">
                    </div>
            <% } %>
            </div>
        </div>
    </div>
    

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize AOS animations
            AOS.init({
                duration: 800,
                once: true,
                offset: 100,
                easing: 'ease-out-cubic'
            });
            
            // Gallery functionality
            const galleryModal = document.querySelector('.gallery-modal');
            const galleryViewAllBtn = document.querySelector('.gallery-view-all');
            const galleryModalClose = document.querySelector('.gallery-modal-close');
            const galleryModalMain = document.querySelector('.gallery-modal-main');
            const galleryModalThumbs = document.querySelectorAll('.gallery-modal-thumb');
            const galleryModalPrev = document.querySelector('.gallery-modal-prev');
            const galleryModalNext = document.querySelector('.gallery-modal-next');
            const galleryGridItems = document.querySelectorAll('.gallery-grid-img');
            
            // Click on grid items also opens modal
            galleryGridItems.forEach(item => {
                item.addEventListener('click', function() {
                    openGalleryModal();
                });
            });
            
            if (galleryViewAllBtn) {
                galleryViewAllBtn.addEventListener('click', function() {
                    openGalleryModal();
                });
            }
            
            if (galleryModalClose) {
                galleryModalClose.addEventListener('click', function() {
                    galleryModal.classList.add('hidden');
                    document.body.style.overflow = 'auto';
                });
            }
            
            // Add key event listener for ESC to close modal
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && !galleryModal.classList.contains('hidden')) {
                    galleryModal.classList.add('hidden');
                    document.body.style.overflow = 'auto';
                }
            });
            
            // Thumbnail navigation
            galleryModalThumbs.forEach(thumb => {
                thumb.addEventListener('click', function() {
                    const index = parseInt(this.dataset.index);
                    updateModalImage(index);
                });
            });
            
            // Previous and Next buttons
            if (galleryModalPrev && galleryModalNext) {
                galleryModalPrev.addEventListener('click', function() {
                    navigateGallery(-1);
                });
                
                galleryModalNext.addEventListener('click', function() {
                    navigateGallery(1);
                });
                
                // Add key event listeners for arrow navigation
                document.addEventListener('keydown', function(e) {
                    if (galleryModal.classList.contains('hidden')) return;
                    
                    if (e.key === 'ArrowLeft') {
                        navigateGallery(-1);
                    } else if (e.key === 'ArrowRight') {
                        navigateGallery(1);
                    }
                });
            }
            
            function openGalleryModal() {
                galleryModal.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }
            
            function updateModalImage(index) {
                const activeThumbs = document.querySelectorAll('.gallery-modal-thumb');
                if (index >= 0 && index < activeThumbs.length) {
                    // Update active thumb
                    galleryModalThumbs.forEach(t => t.classList.remove('active'));
                    activeThumbs[index].classList.add('active');
                    
                    // Update main image
                    const imgSrc = activeThumbs[index].querySelector('img').src;
                    galleryModalMain.src = imgSrc;
                }
            }
            
            function navigateGallery(direction) {
                const activeThumbs = document.querySelectorAll('.gallery-modal-thumb');
                const activeThumb = document.querySelector('.gallery-modal-thumb.active');
                if (!activeThumb) return;
                
                const currentIndex = parseInt(activeThumb.dataset.index);
                let newIndex = currentIndex + direction;
                
                // Loop around if needed
                if (newIndex < 0) newIndex = activeThumbs.length - 1;
                if (newIndex >= activeThumbs.length) newIndex = 0;
                
                updateModalImage(newIndex);
            }
            
            // FAQ toggles
            const faqToggles = document.querySelectorAll('.faq-toggle');
            
            faqToggles.forEach(toggle => {
                toggle.addEventListener('click', function() {
                    const content = this.nextElementSibling;
                    const icon = this.querySelector('i');
                    
                    // Toggle display
                    if (content.style.display === 'block') {
                        content.style.display = 'none';
                        icon.classList.remove('fa-chevron-up');
                        icon.classList.add('fa-chevron-down');
                } else {
                        content.style.display = 'block';
                        icon.classList.remove('fa-chevron-down');
                        icon.classList.add('fa-chevron-up');
                    }
                });
            });
            
            // Mobile book button
            const mobileBookBtn = document.getElementById('mobile-book-btn');
            if (mobileBookBtn) {
                mobileBookBtn.addEventListener('click', function() {
                    const bookingSection = document.querySelector('.booking-sidebar');
                    if (bookingSection) {
                        bookingSection.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            }
        });
    </script>

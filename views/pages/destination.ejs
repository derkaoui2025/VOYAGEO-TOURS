    <!-- Airbnb-Style Gallery Section -->
    <section class="airbnb-gallery relative" data-aos="fade-in">
        <div class="gallery-grid">
            <!-- Main large image -->
            <div class="gallery-main gallery-item">
                <img src="<%= tour.mainImage %>" alt="<%= tour.title %> - Main view" class="gallery-grid-img">
            </div>
            
            <!-- Side images grid -->
            <div class="gallery-side">
                <% if (tour.images && tour.images.length > 0) { %>
                    <% tour.images.slice(0, 2).forEach((image, index) => { %>
                        <div class="gallery-item">
                            <img src="<%= image %>" alt="<%= tour.title %> - View <%= index + 1 %>" class="gallery-grid-img">
                    </div>
                    <% }) %>
                <% } else { %>
                    <div class="gallery-item">
                        <img src="<%= tour.mainImage %>" alt="<%= tour.title %> - View 1" class="gallery-grid-img">
                    </div>
                    <div class="gallery-item">
                        <img src="<%= tour.mainImage %>" alt="<%= tour.title %> - View 2" class="gallery-grid-img">
                    </div>
                <% } %>
                    </div>
                </div>
        
        <!-- View all photos button -->
        <button class="gallery-view-all">
            <i class="fas fa-th mr-2"></i>
            Show all photos
        </button>
    </section>
    

        }
        
        /* Decorative elements */
        .decorative-line {
            position: relative;
        }
        
        .decorative-line::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 0;
            width: 60px;
            height: 1px;
            background-color: #B8860B;
        }
        
        .decorative-line.centered::after {
            left: 50%;
            transform: translateX(-50%);
        }

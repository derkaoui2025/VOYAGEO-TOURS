<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <!-- Hero Section with large image and text overlay -->
    <section class="relative">
        <div class="w-full h-[500px] relative">
            <img src="/images/headers/morocco-tour-bg.jpg" alt="Morocco Tours" class="w-full h-full object-cover">
            <div class="absolute inset-0 bg-black/50 flex items-center justify-center">
                <div class="text-center">
                    <img src="/images/logo-white.png" alt="Voyageo Tours" class="h-20 mx-auto mb-6">
                    <h1 class="text-6xl font-montserrat font-bold text-white mb-4">MOROCCO TOUR</h1>
                    <p class="text-white/90 text-xl max-w-3xl mx-auto">Discover the magic of Morocco with our carefully crafted tours</p>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Quick Filter Tags -->
    <section class="py-10 bg-white border-b">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-montserrat font-bold text-center text-secondary mb-8">Explore Our Tours</h2>
            <div class="flex flex-wrap items-center justify-center gap-4 animate__animated animate__fadeIn">
                <a href="#all" class="bg-primary text-white text-lg px-8 py-3 rounded-full hover:bg-primary/80 transition-all">All Tours</a>
                <% 
                // Get unique destinations from tours
                const destinations = [...new Set(tours.map(tour => tour.startLocation))];
                const categories = [...new Set(tours.map(tour => tour.category))];
                
                // Output destination tags
                destinations.forEach(destination => { %>
                    <a href="#<%= destination.toLowerCase().replace(/\s+/g, '-') %>" 
                       class="bg-gray-100 text-secondary text-lg px-8 py-3 rounded-full hover:bg-gray-200 transition-all">
                       <%= destination %>
                    </a>
                <% });
                
                // Output category tags
                categories.forEach(category => { %>
                    <a href="#<%= category.toLowerCase() %>" 
                       class="bg-gray-100 text-secondary text-lg px-8 py-3 rounded-full hover:bg-gray-200 transition-all">
                       <%= category %>
                    </a>
                <% }); %>
            </div>
        </div>
    </section>
    
    <!-- Advanced Filter Section (collapsible) -->
    <section class="py-6 bg-white border-b">
        <div class="container mx-auto px-6">
            <button id="toggle-filters" class="flex items-center justify-center mx-auto mb-4 text-lg text-secondary font-medium">
                <i class="fas fa-sliders-h mr-2"></i> Advanced Filters <i class="fas fa-chevron-down ml-2"></i>
            </button>
            
            <div id="filters-container" class="hidden">
                <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 mb-4 animate__animated animate__fadeIn">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-4">
                        <div class="flex flex-col">
                            <label for="duration" class="text-secondary font-medium mb-2 flex items-center text-lg">
                                <i class="fas fa-clock text-primary mr-2"></i> Duration:
                            </label>
                            <select id="duration" class="w-full px-4 py-3 text-lg border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300">
                                <option value="">All Durations</option>
                                <option value="1-3">1-3 Days</option>
                                <option value="4-7">4-7 Days</option>
                                <option value="8-14">8-14 Days</option>
                                <option value="15+">15+ Days</option>
                            </select>
                        </div>
                        
                        <div class="flex flex-col">
                            <label for="destination" class="text-secondary font-medium mb-2 flex items-center text-lg">
                                <i class="fas fa-map-marker-alt text-primary mr-2"></i> Destination:
                            </label>
                            <select id="destination" class="w-full px-4 py-3 text-lg border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300">
                                <option value="">All Destinations</option>
                                <% destinations.forEach(destination => { %>
                                    <option value="<%= destination.toLowerCase().replace(/\s+/g, '-') %>"><%= destination %></option>
                                <% }); %>
                            </select>
                        </div>
                        
                        <div class="flex flex-col">
                            <label for="price" class="text-secondary font-medium mb-2 flex items-center text-lg">
                                <i class="fas fa-tag text-primary mr-2"></i> Price Range:
                            </label>
                            <select id="price" class="w-full px-4 py-3 text-lg border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300">
                                <option value="">All Prices</option>
                                <option value="0-500">€0 - €500</option>
                                <option value="500-1000">€500 - €1000</option>
                                <option value="1000-2000">€1000 - €2000</option>
                                <option value="2000+">€2000+</option>
                            </select>
                        </div>

                        <div class="flex flex-col">
                            <label for="category" class="text-secondary font-medium mb-2 flex items-center text-lg">
                                <i class="fas fa-th-large text-primary mr-2"></i> Category:
                            </label>
                            <select id="category" class="w-full px-4 py-3 text-lg border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300">
                                <option value="">All Categories</option>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category %>"><%= category %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    
                    <div class="flex justify-center mt-4">
                        <button id="filter-button" class="bg-secondary hover:bg-secondary/80 text-white font-medium px-8 py-3 text-lg rounded-full transition-all duration-300 flex items-center">
                            <i class="fas fa-filter mr-2"></i> Filter Tours
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Tours List Section -->
    <section class="py-16">
        <div class="container mx-auto px-6 lg:px-12">
            <div class="space-y-8">
                <% if (tours && tours.length > 0) { %>
                    <% tours.forEach(tour => { %>
                        <div class="tour-card bg-white border border-gray-200 rounded-lg overflow-hidden hover:border-primary transition-all duration-300 animate__animated animate__fadeIn" 
                            data-duration="<%= tour.duration %>" 
                            data-destination="<%= tour.startLocation.toLowerCase().replace(/\s+/g, '-') %>" 
                            data-price="<%= tour.price %>"
                            data-category="<%= tour.category %>">
                            <div class="flex flex-col md:flex-row">
                                <!-- Tour Image (Clickable) -->
                                <div class="md:w-1/3 lg:w-1/4 relative">
                                    <a href="/tours/<%= tour.slug %>" class="block w-full h-full">
                                        <img class="lazy-image w-full h-60 md:h-full object-cover" data-src="<%= tour.mainImage %>" alt="<%= tour.title %>">
                                    </a>
                                </div>
                                
                                <!-- Tour Content -->
                                <div class="md:w-2/3 lg:w-3/4 p-6 md:p-8">
                                    <div class="flex flex-col md:flex-row justify-between">
                                        <div class="md:w-2/3">
                                            <!-- Title (Clickable) -->
                                            <a href="/tours/<%= tour.slug %>" class="block">
                                                <h3 class="text-2xl font-montserrat font-bold mb-5 text-secondary uppercase hover:text-primary transition-colors"><%= tour.title %></h3>
                                            </a>
                                            
                                            <div class="space-y-3 mb-6">
                                                <div class="flex items-center text-gray-600">
                                                    <i class="far fa-clock text-primary w-5 mr-2"></i>
                                                    <span><%= tour.duration %> <%= tour.duration === 1 ? 'Day' : 'Days' %></span>
                                                </div>
                                                
                                                <div class="flex items-center text-gray-600">
                                                    <i class="far fa-calendar-alt text-primary w-5 mr-2"></i>
                                                    <span>Availability: Daily</span>
                                                </div>
                                                
                                                <div class="flex items-center text-gray-600">
                                                    <i class="fas fa-exchange-alt text-primary w-5 mr-2"></i>
                                                    <span>From <%= tour.startLocation %> & Back</span>
                                                </div>
                                                
                                                <div class="flex items-center text-gray-600">
                                                    <i class="fas fa-map-marker-alt text-primary w-5 mr-2"></i>
                                                    <span><%= tour.startLocation %></span>
                                                </div>
                                            </div>
                                            
                                            <!-- Description (Clickable) -->
                                            <a href="/tours/<%= tour.slug %>" class="block text-gray-600 mb-4 pr-4 md:pr-6 hover:text-gray-900 transition-colors">
                                                <%= tour.description.substring(0, 150) %>...
                                            </a>
                                        </div>
                                        
                                        <div class="md:w-1/3 flex flex-col items-end justify-between mt-6 md:mt-0">
                                            <div class="text-right mb-auto">
                                                <p class="text-gray-500 mb-1">From</p>
                                                <p class="text-3xl font-bold text-secondary mb-8"><%= tour.price %> EUR</p>
                                            </div>
                                            
                                            <a href="/tours/<%= tour.slug %>" class="w-full md:w-auto inline-block bg-[#3498db] hover:bg-[#2980b9] text-white font-medium py-3 px-8 rounded text-center uppercase">
                                                VIEW DETAILS
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <!-- No Tours Message -->
                    <div class="flex flex-col items-center justify-center p-16 text-center bg-white border border-gray-200 rounded-lg">
                        <i class="fas fa-search text-8xl text-gray-300 mb-4"></i>
                        <h3 class="text-3xl font-montserrat font-semibold mb-3 text-secondary">No tours available at the moment</h3>
                        <p class="text-gray-600 text-xl mb-6">Please check back later or contact us to inquire about custom tours.</p>
                        <a href="/contact" class="inline-block bg-primary hover:bg-primary/80 text-white font-medium py-3 px-8 text-xl rounded-full">
                            <i class="fas fa-envelope mr-2"></i> Contact Us
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
    
    <!-- Call to Action Section -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-6">
            <div class="max-w-5xl mx-auto bg-primary/10 rounded-lg p-10 text-center">
                <h2 class="text-3xl font-montserrat font-bold mb-6 text-secondary">Can't Find What You're Looking For?</h2>
                <p class="text-xl text-gray-700 mb-8">Let us create a personalized tour experience just for you.</p>
                <a href="/customize" class="inline-block bg-primary hover:bg-primary/80 text-white font-medium py-3 px-8 text-xl rounded-full transition-all duration-300">
                    <i class="fas fa-magic mr-2"></i> Customize Your Tour
                </a>
            </div>
        </div>
    </section>
    
    <!-- Newsletter Section -->
    <section class="py-20 bg-secondary text-white">
        <div class="container mx-auto px-6">
            <div class="max-w-3xl mx-auto text-center animate__animated animate__fadeIn">
                <h2 class="text-4xl font-montserrat font-bold mb-4">Get Exclusive Travel Offers</h2>
                <p class="text-white/90 text-xl mb-10">Subscribe to our newsletter and be the first to receive special promotions and travel tips.</p>
                <form class="flex flex-col md:flex-row gap-4 justify-center">
                    <input type="email" placeholder="Your Email Address" class="w-full md:w-96 px-6 py-4 text-lg rounded-full focus:ring-2 focus:ring-primary focus:border-primary" required>
                    <button type="submit" class="bg-primary hover:bg-primary/80 text-white font-medium px-8 py-4 text-lg rounded-full transition-all duration-300 flex items-center justify-center">
                        <i class="fas fa-paper-plane mr-2"></i> Subscribe
                    </button>
                </form>
            </div>
        </div>
    </section>
    
    <%- include('../partials/footer') %>
    
    <script>
        // Toggle advanced filters
        document.addEventListener('DOMContentLoaded', function() {
            const toggleFiltersBtn = document.getElementById('toggle-filters');
            const filtersContainer = document.getElementById('filters-container');
            const filterButton = document.getElementById('filter-button');
            const tourCards = document.querySelectorAll('.tour-card');
            
            toggleFiltersBtn.addEventListener('click', function() {
                filtersContainer.classList.toggle('hidden');
                const icon = toggleFiltersBtn.querySelector('.fa-chevron-down, .fa-chevron-up');
                if (icon.classList.contains('fa-chevron-down')) {
                    icon.classList.replace('fa-chevron-down', 'fa-chevron-up');
                } else {
                    icon.classList.replace('fa-chevron-up', 'fa-chevron-down');
                }
            });
            
            // Quick filter tags
            const filterTags = document.querySelectorAll('.container a[href^="#"]');
            filterTags.forEach(tag => {
                tag.addEventListener('click', function(e) {
                    e.preventDefault();
                    const filterValue = tag.getAttribute('href').substring(1);
                    
                    // Reset styling on all tags
                    filterTags.forEach(t => {
                        t.classList.remove('bg-primary', 'text-white');
                        t.classList.add('bg-gray-100', 'text-secondary');
                    });
                    
                    // Highlight selected tag
                    tag.classList.remove('bg-gray-100', 'text-secondary');
                    tag.classList.add('bg-primary', 'text-white');
                    
                    // Filter tours
                    tourCards.forEach(card => {
                        if (filterValue === 'all') {
                            card.style.display = 'block';
                        } else if (card.dataset.destination.includes(filterValue) || card.dataset.category.toLowerCase() === filterValue) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            });
            
            // Lazy loading for images
            const lazyImages = document.querySelectorAll('.lazy-image');
            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const img = entry.target;
                        img.src = img.dataset.src;
                        img.classList.add('loaded');
                        observer.unobserve(img);
                    }
                });
            });
            
            lazyImages.forEach(img => {
                imageObserver.observe(img);
            });
            
            // Advanced filter functionality
            filterButton.addEventListener('click', function() {
                const durationFilter = document.getElementById('duration').value;
                const destinationFilter = document.getElementById('destination').value;
                const priceFilter = document.getElementById('price').value;
                const categoryFilter = document.getElementById('category').value;
                
                let visibleCount = 0;
                
                // Reset quick filter tags
                filterTags.forEach(t => {
                    t.classList.remove('bg-primary', 'text-white');
                    t.classList.add('bg-gray-100', 'text-secondary');
                });
                document.querySelector('a[href="#all"]').classList.add('bg-primary', 'text-white');
                document.querySelector('a[href="#all"]').classList.remove('bg-gray-100', 'text-secondary');
                
                tourCards.forEach(card => {
                    let showCard = true;
                    
                    // Duration filtering
                    if (durationFilter) {
                        const duration = parseInt(card.dataset.duration);
                        const [min, max] = durationFilter.split('-');
                        
                        if (max === '+') {
                            if (duration < parseInt(min)) showCard = false;
                        } else {
                            if (duration < parseInt(min) || duration > parseInt(max)) showCard = false;
                        }
                    }
                    
                    // Destination filtering
                    if (destinationFilter && !card.dataset.destination.includes(destinationFilter)) {
                        showCard = false;
                    }
                    
                    // Price filtering
                    if (priceFilter) {
                        const price = parseInt(card.dataset.price);
                        const [min, max] = priceFilter.split('-');
                        
                        if (max === '+') {
                            if (price < parseInt(min)) showCard = false;
                        } else {
                            if (price < parseInt(min) || price > parseInt(max)) showCard = false;
                        }
                    }
                    
                    // Category filtering
                    if (categoryFilter && card.dataset.category !== categoryFilter) {
                        showCard = false;
                    }
                    
                    card.style.display = showCard ? 'block' : 'none';
                    if (showCard) visibleCount++;
                });
                
                // Show "no results" message if no tours match the filters
                const noResultsMessage = document.querySelector('.no-results-message');
                if (visibleCount === 0) {
                    if (!noResultsMessage) {
                        const message = document.createElement('div');
                        message.className = 'no-results-message flex flex-col items-center justify-center p-16 text-center bg-white border border-gray-200 rounded-lg';
                        message.innerHTML = `
                            <i class="fas fa-filter-slash text-8xl text-gray-300 mb-4"></i>
                            <h3 class="text-3xl font-montserrat font-semibold mb-3 text-secondary">No tours match your filter criteria</h3>
                            <p class="text-gray-600 text-xl mb-6">Please try different filter options or reset your filters.</p>
                            <button id="reset-filters" class="inline-block bg-primary hover:bg-primary/80 text-white font-medium py-3 px-8 text-xl rounded-full">
                                <i class="fas fa-redo-alt mr-2"></i> Reset Filters
                            </button>
                        `;
                        document.querySelector('.space-y-8').appendChild(message);
                        
                        // Add event listener to reset button
                        document.getElementById('reset-filters').addEventListener('click', function() {
                            document.getElementById('duration').value = '';
                            document.getElementById('destination').value = '';
                            document.getElementById('price').value = '';
                            document.getElementById('category').value = '';
                            
                            // Reset quick filter tags
                            filterTags.forEach(t => {
                                t.classList.remove('bg-primary', 'text-white');
                                t.classList.add('bg-gray-100', 'text-secondary');
                            });
                            document.querySelector('a[href="#all"]').classList.add('bg-primary', 'text-white');
                            document.querySelector('a[href="#all"]').classList.remove('bg-gray-100', 'text-secondary');
                            
                            // Show all tours
                            tourCards.forEach(card => {
                                card.style.display = 'block';
                            });
                            
                            // Remove no results message
                            message.remove();
                        });
                    }
                } else if (noResultsMessage) {
                    noResultsMessage.remove();
                }
            });
        });
    </script>
</body>
</html> 
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="bg-gray-50 font-opensans text-gray-800">
    <%- include('../partials/navbar') %>
    
    <%- include('../partials/hero', { 
        heroTitle: 'Morocco Tours', 
        heroSubtitle: 'Discover the magic of Morocco with our carefully crafted tours',
        headerImagePath: '/images/headers/morocco-tour-bg.jpg'
    }) %>
    
    <!-- Quick Filter Tags -->
    <section class="py-8 bg-white border-b">
        <div class="container mx-auto px-6">
            <h2 class="text-2xl font-montserrat font-bold text-center text-secondary mb-6">Explore Our Tours</h2>
            <div class="flex flex-wrap items-center justify-center gap-3 animate__animated animate__fadeIn">
                <a href="#all" class="bg-primary text-white text-sm px-6 py-2 rounded-full hover:bg-primary/80 transition-all">All Tours</a>
                <% 
                // Get unique destinations from tours
                const destinations = [...new Set(tours.map(tour => tour.startLocation))];
                const categories = [...new Set(tours.map(tour => tour.category))];
                
                // Output destination tags
                destinations.forEach(destination => { %>
                    <a href="#<%= destination.toLowerCase().replace(/\s+/g, '-') %>" 
                       class="bg-gray-100 text-secondary text-sm px-6 py-2 rounded-full hover:bg-gray-200 transition-all">
                       <%= destination %>
                    </a>
                <% });
                
                // Output category tags
                categories.forEach(category => { %>
                    <a href="#<%= category.toLowerCase() %>" 
                       class="bg-gray-100 text-secondary text-sm px-6 py-2 rounded-full hover:bg-gray-200 transition-all">
                       <%= category %>
                    </a>
                <% }); %>
            </div>
        </div>
    </section>
    
    <!-- Advanced Filter Section (collapsible) -->
    <section class="py-5 bg-white border-b">
        <div class="container mx-auto px-6">
            <button id="toggle-filters" class="flex items-center justify-center mx-auto mb-3 text-sm text-secondary font-medium">
                <i class="fas fa-sliders-h mr-2"></i> Advanced Filters <i class="fas fa-chevron-down ml-2"></i>
            </button>
            
            <div id="filters-container" class="hidden">
                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-4 animate__animated animate__fadeIn">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-3">
                        <div class="flex flex-col">
                            <label for="duration" class="text-secondary font-medium mb-1 flex items-center text-sm">
                                <i class="fas fa-clock text-primary mr-2"></i> Duration:
                            </label>
                            <select id="duration" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300">
                                <option value="">All Durations</option>
                                <option value="1-3">1-3 Days</option>
                                <option value="4-7">4-7 Days</option>
                                <option value="8-14">8-14 Days</option>
                                <option value="15+">15+ Days</option>
                            </select>
                        </div>
                        
                        <div class="flex flex-col">
                            <label for="destination" class="text-secondary font-medium mb-1 flex items-center text-sm">
                                <i class="fas fa-map-marker-alt text-primary mr-2"></i> Destination:
                            </label>
                            <select id="destination" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300">
                                <option value="">All Destinations</option>
                                <% destinations.forEach(destination => { %>
                                    <option value="<%= destination.toLowerCase().replace(/\s+/g, '-') %>"><%= destination %></option>
                                <% }); %>
                            </select>
                        </div>
                        
                        <div class="flex flex-col">
                            <label for="price" class="text-secondary font-medium mb-1 flex items-center text-sm">
                                <i class="fas fa-tag text-primary mr-2"></i> Price Range:
                            </label>
                            <select id="price" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300">
                                <option value="">All Prices</option>
                                <option value="0-500">€0 - €500</option>
                                <option value="500-1000">€500 - €1000</option>
                                <option value="1000-2000">€1000 - €2000</option>
                                <option value="2000+">€2000+</option>
                            </select>
                        </div>

                        <div class="flex flex-col">
                            <label for="category" class="text-secondary font-medium mb-1 flex items-center text-sm">
                                <i class="fas fa-th-large text-primary mr-2"></i> Category:
                            </label>
                            <select id="category" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300">
                                <option value="">All Categories</option>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category %>"><%= category %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    
                    <div class="flex justify-center mt-3">
                        <button id="filter-button" class="bg-secondary hover:bg-secondary/80 text-white font-medium px-6 py-2 text-sm rounded-full transition-all duration-300 flex items-center">
                            <i class="fas fa-filter mr-2"></i> Filter Tours
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Tours List Section -->
    <section class="py-12">
        <div class="container mx-auto px-6 lg:px-12">
            <div class="space-y-6">
                <% if (tours && tours.length > 0) { %>
                    <% tours.forEach(tour => { %>
                        <div class="tour-card bg-white border border-gray-200 rounded-lg overflow-hidden hover:border-primary transition-all duration-300 animate__animated animate__fadeIn" 
                            data-duration="<%= tour.duration %>" 
                            data-destination="<%= tour.startLocation.toLowerCase().replace(/\s+/g, '-') %>" 
                            data-price="<%= tour.price %>"
                            data-category="<%= tour.category %>">
                            <div class="flex flex-col md:flex-row">
                                <!-- Tour Image (Clickable) -->
                                <div class="md:w-1/3 lg:w-1/4 relative">
                                    <a href="/tours/<%= tour.slug %>" class="block w-full h-full">
                                        <img class="lazy-image w-full h-60 md:h-full object-cover" data-src="<%= tour.mainImage %>" alt="<%= tour.title %>">
                                    </a>
                                </div>
                                
                                <!-- Tour Content -->
                                <div class="md:w-2/3 lg:w-3/4 p-4 md:p-6">
                                    <div class="flex flex-col md:flex-row justify-between">
                                        <div class="md:w-2/3">
                                            <!-- Title (Clickable) -->
                                            <a href="/tours/<%= tour.slug %>" class="block">
                                                <h3 class="text-xl font-montserrat font-bold mb-3 text-secondary uppercase hover:text-primary transition-colors"><%= tour.title %></h3>
                                            </a>
                                            
                                            <div class="space-y-2 mb-4">
                                                <div class="flex items-center text-gray-600 text-sm">
                                                    <i class="far fa-clock text-primary w-5 mr-2"></i>
                                                    <span><%= tour.duration %> <%= tour.duration === 1 ? 'Day' : 'Days' %></span>
                                                </div>
                                                
                                                <div class="flex items-center text-gray-600 text-sm">
                                                    <i class="far fa-calendar-alt text-primary w-5 mr-2"></i>
                                                    <span>Availability: Daily</span>
                                                </div>
                                                
                                                <div class="flex items-center text-gray-600 text-sm">
                                                    <i class="fas fa-exchange-alt text-primary w-5 mr-2"></i>
                                                    <span>From <%= tour.startLocation %> & Back</span>
                                                </div>
                                                
                                                <div class="flex items-center text-gray-600 text-sm">
                                                    <i class="fas fa-map-marker-alt text-primary w-5 mr-2"></i>
                                                    <span><%= tour.startLocation %></span>
                                                </div>
                                            </div>
                                            
                                            <!-- Description (Clickable) -->
                                            <a href="/tours/<%= tour.slug %>" class="block text-gray-600 mb-3 pr-4 md:pr-6 hover:text-gray-900 transition-colors text-sm">
                                                <%= tour.description.substring(0, 150) %>...
                                            </a>
                                        </div>
                                        
                                        <div class="md:w-1/3 flex flex-col items-end justify-between mt-4 md:mt-0">
                                            <div class="text-right mb-auto">
                                                <p class="text-gray-500 mb-1 text-sm">From</p>
                                                <p class="text-2xl font-bold text-secondary mb-6"><%= tour.price %> EUR</p>
                                            </div>
                                            
                                            <a href="/tours/<%= tour.slug %>" class="w-full md:w-auto inline-block bg-[#3498db] hover:bg-[#2980b9] text-white font-medium py-2 px-6 rounded text-center uppercase text-sm">
                                                VIEW DETAILS
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <!-- No Tours Message -->
                    <div class="flex flex-col items-center justify-center p-10 text-center bg-white border border-gray-200 rounded-lg">
                        <i class="fas fa-search text-6xl text-gray-300 mb-4"></i>
                        <h3 class="text-2xl font-montserrat font-semibold mb-3 text-secondary">No tours available at the moment</h3>
                        <p class="text-gray-600 text-base mb-4">Please check back later or contact us to inquire about custom tours.</p>
                        <a href="/contact" class="inline-block bg-primary hover:bg-primary/80 text-white font-medium py-2 px-6 text-base rounded-full">
                            <i class="fas fa-envelope mr-2"></i> Contact Us
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
    
    <!-- Call to Action Section -->
    <section class="py-12 bg-white">
        <div class="container mx-auto px-6">
            <div class="max-w-5xl mx-auto bg-primary/10 rounded-lg p-8 text-center">
                <h2 class="text-2xl font-montserrat font-bold mb-4 text-secondary">Can't Find What You're Looking For?</h2>
                <p class="text-base text-gray-700 mb-6">Let us create a personalized tour experience just for you.</p>
                <a href="/customize" class="inline-block bg-primary hover:bg-primary/80 text-white font-medium py-2 px-6 text-base rounded-full transition-all duration-300">
                    <i class="fas fa-magic mr-2"></i> Customize Your Tour
                </a>
            </div>
        </div>
    </section>
    
    <!-- Newsletter Section -->
    <section class="py-16 bg-secondary text-white">
        <div class="container mx-auto px-6">
            <div class="max-w-3xl mx-auto text-center animate__animated animate__fadeIn">
                <h2 class="text-2xl font-montserrat font-bold mb-3">Get Exclusive Travel Offers</h2>
                <p class="text-white/90 text-base mb-8">Subscribe to our newsletter and be the first to receive special promotions and travel tips.</p>
                <form class="flex flex-col md:flex-row gap-3 justify-center">
                    <input type="email" placeholder="Your Email Address" class="w-full md:w-96 px-4 py-2 text-base rounded-full focus:ring-2 focus:ring-primary focus:border-primary" required>
                    <button type="submit" class="bg-primary hover:bg-primary/80 text-white font-medium px-6 py-2 text-base rounded-full transition-all duration-300 flex items-center justify-center">
                        <i class="fas fa-paper-plane mr-2"></i> Subscribe
                    </button>
                </form>
            </div>
        </div>
    </section>
    
    <%- include('../partials/footer') %>
    
    <script>
        // Toggle advanced filters
        document.addEventListener('DOMContentLoaded', function() {
            const toggleFiltersBtn = document.getElementById('toggle-filters');
            const filtersContainer = document.getElementById('filters-container');
            const filterButton = document.getElementById('filter-button');
            const tourCards = document.querySelectorAll('.tour-card');
            
            toggleFiltersBtn.addEventListener('click', function() {
                filtersContainer.classList.toggle('hidden');
                const icon = this.querySelector('.fa-chevron-down');
                if(icon) {
                    icon.classList.toggle('fa-chevron-up');
                }
            });
            
            // Filter functionality
            filterButton.addEventListener('click', function() {
                const durationFilter = document.getElementById('duration').value;
                const destinationFilter = document.getElementById('destination').value;
                const priceFilter = document.getElementById('price').value;
                const categoryFilter = document.getElementById('category').value;
                
                tourCards.forEach(card => {
                    let showCard = true;
                    
                    if(durationFilter && durationFilter !== '') {
                        const duration = parseInt(card.getAttribute('data-duration'));
                        const [min, max] = durationFilter.split('-');
                        
                        if(max === '+') {
                            if(duration < parseInt(min)) showCard = false;
                        } else {
                            if(duration < parseInt(min) || duration > parseInt(max)) showCard = false;
                        }
                    }
                    
                    if(showCard && destinationFilter && destinationFilter !== '') {
                        const destination = card.getAttribute('data-destination');
                        if(destination !== destinationFilter) showCard = false;
                    }
                    
                    if(showCard && priceFilter && priceFilter !== '') {
                        const price = parseInt(card.getAttribute('data-price'));
                        const [min, max] = priceFilter.split('-');
                        
                        if(max === '+') {
                            if(price < parseInt(min)) showCard = false;
                        } else {
                            if(price < parseInt(min) || price > parseInt(max)) showCard = false;
                        }
                    }
                    
                    if(showCard && categoryFilter && categoryFilter !== '') {
                        const category = card.getAttribute('data-category');
                        if(category !== categoryFilter) showCard = false;
                    }
                    
                    card.style.display = showCard ? 'block' : 'none';
                });
            });
            
            // Lazy loading for images
            const lazyImages = document.querySelectorAll('.lazy-image');
            
            if ('IntersectionObserver' in window) {
                const imageObserver = new IntersectionObserver((entries, observer) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const img = entry.target;
                            img.src = img.dataset.src;
                            img.classList.remove('lazy-image');
                            imageObserver.unobserve(img);
                        }
                    });
                });
                
                lazyImages.forEach(img => {
                    imageObserver.observe(img);
                });
            } else {
                // Fallback for browsers without IntersectionObserver support
                lazyImages.forEach(img => {
                    img.src = img.dataset.src;
                });
            }
        });
    </script>
</body>
</html> 
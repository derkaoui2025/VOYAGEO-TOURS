<%- include('../partials/header') %>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-8">
            <h1 class="mb-4">Morocco Travel Blog</h1>
            <p class="lead mb-5">Discover travel tips, insights, and stories from our adventures exploring the beautiful country of Morocco.</p>
            
            <% if (blogPosts && blogPosts.length > 0) { %>
                <% blogPosts.forEach(post => { %>
                    <div class="card mb-4 blog-card">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="<%= post.image %>" class="img-fluid rounded-start blog-card-image" alt="<%= post.title %>">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h2 class="card-title h5"><a href="/blog/<%= post.slug %>" class="text-decoration-none"><%= post.title %></a></h2>
                                    <p class="card-text"><%= post.excerpt %></p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            Published <%= post.createdAt.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                        </small>
                                    </p>
                                    <a href="/blog/<%= post.slug %>" class="btn btn-sm btn-primary">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="alert alert-info">
                    No blog posts available at the moment. Please check back later.
                </div>
            <% } %>
        </div>
        
        <div class="col-lg-4">
            <!-- Sidebar -->
            <div class="card sidebar-card mb-4">
                <div class="card-body">
                    <h3 class="h5 mb-3">About Our Blog</h3>
                    <p>Welcome to the Voyageo Tours travel blog! Here we share insider tips, cultural insights, and travel inspiration for your Moroccan adventure.</p>
                </div>
            </div>
            
            <div class="card sidebar-card">
                <div class="card-body">
                    <h3 class="h5 mb-3">Popular Destinations</h3>
                    <ul class="list-unstyled">
                        <li><a href="/tours/marrakech" class="text-decoration-none">Marrakech</a></li>
                        <li><a href="/tours/fes" class="text-decoration-none">Fes</a></li>
                        <li><a href="/tours/chefchaouen" class="text-decoration-none">Chefchaouen</a></li>
                        <li><a href="/tours/sahara-desert" class="text-decoration-none">Sahara Desert</a></li>
                        <li><a href="/tours/essaouira" class="text-decoration-none">Essaouira</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 
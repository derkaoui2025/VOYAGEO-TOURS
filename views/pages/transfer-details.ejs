            <div class="gallery-modal-main">
                <% if (transfer.gallery && transfer.gallery.length > 0) { %>
                    <img src="<%= transfer.gallery[0] %>" alt="<%= transfer.startCity %> to <%= transfer.endCity %> Transfer">

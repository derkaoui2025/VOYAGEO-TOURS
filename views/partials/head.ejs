    @apply bg-primary hover:bg-primary/80 text-white font-medium py-3 px-6 rounded-md transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg;
  }
  
  .required-asterisk {
    @apply text-accent ml-1;
  }
  
  .captcha-container {
    @apply bg-light rounded-md p-4 border border-gray-300;
  }
  
  .info-text {
    @apply text-sm text-gray-600 mt-1;
  }
  
  .field-icon {
    @apply text-primary mr-2;
  }
  
  .invalid-feedback {
    @apply hidden text-accent text-sm mt-1;
  }
  
  .is-invalid {
    @apply border-accent !important;
  }
  
  .is-valid {
    @apply border-success !important;
  }
  
  .info-card {
    @apply h-full rounded-lg border-0 shadow-sm transition-all duration-300 hover:-translate-y-2 hover:shadow-lg;
  }
  
  .icon-pulse {
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }

<!-- Blog Sidebar -->

<!-- Search -->
<div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h3 class="text-xl font-bold mb-4">Search Posts</h3>
    <form action="/blog/search" method="GET">
        <div class="flex">
            <input 
                type="text" 
                name="q" 
                placeholder="Search blog posts..." 
                class="flex-1 border border-gray-300 rounded-l-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                required
            >
            <button type="submit" class="bg-primary text-white px-4 py-2 rounded-r-md hover:bg-primary-dark">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>
</div>

<!-- Categories -->
<% if (typeof categories !== 'undefined' && categories.length > 0) { %>
<div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h3 class="text-xl font-bold border-b border-gray-200 pb-4 mb-4">Categories</h3>
    <ul class="space-y-2">
        <% categories.forEach(category => { %>
            <li class="flex justify-between items-center py-2 border-b border-gray-100">
                <a href="/blog/category/<%= category._id %>" class="hover:text-primary"><%= category._id %></a>
                <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-xs"><%= category.count %></span>
            </li>
        <% }); %>
    </ul>
</div>
<% } %>

<!-- Tags Cloud -->
<% if (typeof tags !== 'undefined' && tags.length > 0) { %>
<div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h3 class="text-xl font-bold border-b border-gray-200 pb-4 mb-4">Tags</h3>
    <div class="flex flex-wrap gap-2">
        <% tags.forEach(tag => { %>
            <a href="/blog/tag/<%= tag._id %>" class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-primary hover:text-white transition-colors">
                #<%= tag._id %> <% if (tag.count) { %><span class="text-xs">(<%= tag.count %>)</span><% } %>
            </a>
        <% }); %>
    </div>
</div>
<% } %>

<!-- Newsletter Subscribe -->
<div class="bg-primary bg-opacity-10 rounded-lg shadow-md p-6 mb-8">
    <h3 class="text-xl font-bold mb-4">Subscribe to Newsletter</h3>
    <p class="text-gray-600 mb-4">Get the latest posts and updates delivered to your inbox.</p>
    <form action="/subscribe" method="POST" class="space-y-3">
        <div>
            <input 
                type="email" 
                name="email" 
                placeholder="Your email address" 
                class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                required
            >
        </div>
        <button type="submit" class="w-full bg-primary text-white px-4 py-2 rounded-md hover:bg-primary-dark transition-colors">
            Subscribe
        </button>
    </form>
</div>

<!-- Follow Us -->
<div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-xl font-bold mb-4">Follow Us</h3>
    <div class="flex justify-center space-x-4">
        <a href="#" class="bg-blue-600 text-white h-10 w-10 rounded-full flex items-center justify-center hover:bg-blue-700">
            <i class="fab fa-facebook-f"></i>
        </a>
        <a href="#" class="bg-blue-400 text-white h-10 w-10 rounded-full flex items-center justify-center hover:bg-blue-500">
            <i class="fab fa-twitter"></i>
        </a>
        <a href="#" class="bg-pink-600 text-white h-10 w-10 rounded-full flex items-center justify-center hover:bg-pink-700">
            <i class="fab fa-instagram"></i>
        </a>
        <a href="#" class="bg-red-600 text-white h-10 w-10 rounded-full flex items-center justify-center hover:bg-red-700">
            <i class="fab fa-youtube"></i>
        </a>
    </div>
</div> 
<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <%- include('./partials/head') %>
</head>
<body>
    <!-- Main Container -->
    <div class="drawer lg:drawer-open min-h-screen">
        <!-- Mobile Drawer Toggle -->
        <input id="admin-drawer" type="checkbox" class="drawer-toggle" />
        
        <!-- Main Content -->
        <div class="drawer-content flex flex-col bg-base-200">
            <!-- Top Nav -->
            <div class="navbar bg-base-100 shadow-md lg:hidden">
                <div class="flex-none">
                    <label for="admin-drawer" class="btn btn-square btn-ghost drawer-button">
                        <i class="fas fa-bars"></i>
                    </label>
                </div>
                <div class="flex-1">
                    <span class="text-xl font-semibold">Voyageo Admin</span>
                </div>
                <div class="flex-none">
                    <div class="dropdown dropdown-end">
                        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                            <div class="w-10 rounded-full bg-primary text-primary-content flex items-center justify-center">
                                <i class="fas fa-user text-lg"></i>
                            </div>
                        </label>
                        <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
                            <li><a href="/admin/profile"><i class="fas fa-user-cog mr-2"></i> Profile</a></li>
                            <li><a href="/admin/settings"><i class="fas fa-cog mr-2"></i> Settings</a></li>
                            <li><a href="/admin/logout"><i class="fas fa-sign-out-alt mr-2"></i> Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <!-- Dashboard Content -->
            <div class="p-4 md:p-6 space-y-6 pb-20">
                <%- include('./partials/alerts') %>
                <%- body %>
            </div>
        </div>
        
        <!-- Sidebar -->
        <div class="drawer-side">
            <label for="admin-drawer" class="drawer-overlay"></label>
            <div class="bg-base-100 w-80 min-h-full flex flex-col shadow-xl">
                <!-- Logo -->
                <div class="p-4 border-b flex items-center justify-center">
                    <div class="text-2xl font-bold text-primary">Voyageo Admin</div>
                </div>
                
                <!-- Admin Info -->
                <div class="flex items-center gap-3 p-4 border-b">
                    <div class="avatar placeholder">
                        <div class="bg-primary text-primary-content rounded-full w-12">
                            <span class="text-lg"><%= session.adminUsername ? session.adminUsername.charAt(0).toUpperCase() : 'A' %></span>
                        </div>
                    </div>
                    <div>
                        <div class="font-bold"><%= session.adminUsername || 'Admin' %></div>
                        <div class="text-sm opacity-60">Administrator</div>
                    </div>
                </div>
                
                <!-- Navigation -->
                <ul class="menu menu-lg p-2 flex-grow">
                    <li><a href="/admin/dashboard" class="<%= activePage === 'dashboard' ? 'active' : '' %>">
                        <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
                    </a></li>
                    <li><a href="/admin/tours" class="<%= activePage === 'tours' ? 'active' : '' %>">
                        <i class="fas fa-map-marked-alt mr-2"></i> Tours
                    </a></li>
                    <li><a href="/admin/bookings" class="<%= activePage === 'bookings' ? 'active' : '' %>">
                        <i class="fas fa-calendar-check mr-2"></i> Bookings
                    </a></li>
                    <li><a href="/admin/custom-tours" class="<%= activePage === 'custom-tours' ? 'active' : '' %>">
                        <i class="fas fa-route mr-2"></i> Custom Requests
                    </a></li>
                    <li><a href="/admin/excursions" class="<%= activePage === 'excursions' ? 'active' : '' %>">
                        <i class="fas fa-hiking mr-2"></i> Excursions
                    </a></li>
                    <li><a href="/admin/excursion-bookings" class="<%= activePage === 'excursion-bookings' ? 'active' : '' %>">
                        <i class="fas fa-clipboard-list mr-2"></i> Excursion Bookings
                    </a></li>
                    <li><a href="/admin/transfers" class="<%= activePage === 'transfers' ? 'active' : '' %>">
                        <i class="fas fa-car mr-2"></i> Transfers
                    </a></li>
                    <li><a href="/admin/transfer-bookings" class="<%= activePage === 'transfer-bookings' ? 'active' : '' %>">
                        <i class="fas fa-clipboard-list mr-2"></i> Transfer Bookings
                    </a></li>
                    <li><a href="/admin/activities" class="<%= activePage === 'activities' ? 'active' : '' %>">
                        <i class="fas fa-walking mr-2"></i> Activities
                    </a></li>
                    <li><a href="/admin/activity-bookings" class="<%= activePage === 'activity-bookings' ? 'active' : '' %>">
                        <i class="fas fa-clipboard-list mr-2"></i> Activity Bookings
                    </a></li>
                    <li><a href="/admin/users" class="<%= activePage === 'users' ? 'active' : '' %>">
                        <i class="fas fa-users mr-2"></i> Users
                    </a></li>
                    <li><a href="/admin/settings" class="<%= activePage === 'settings' ? 'active' : '' %>">
                        <i class="fas fa-cog mr-2"></i> Settings
                    </a></li>
                </ul>
                
                <!-- Logout -->
                <div class="p-4 border-t">
                    <a href="/admin/logout" class="btn btn-outline btn-error btn-block">
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Common Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html> 